<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="display"
        android:title="@string/display_title">
        <PreferenceScreen
            android:key="kcal"
	    android:fragment="org.omnirom.device.DisplayCalibration"
            android:summary="@string/kcal_summary"
	    android:title="@string/kcal_title" />

        <SwitchPreference
            android:key="taptowake"
            android:summary="@string/taptowake_summary"
            android:title="@string/taptowake_title" />
    </PreferenceCategory>

    <Preference
        android:key="device_doze"
        android:icon="@drawable/ic_device_doze"
        android:persistent="false"
        android:title="@string/device_doze_title"
        android:summary="@string/device_doze_summary">
        <intent android:action="android.intent.action.MAIN"
            android:targetPackage="org.lineageos.settings.doze"
            android:targetClass="org.lineageos.settings.doze.DozeSettingsActivity"/>
    </Preference>

    <PreferenceCategory
        android:key="spectrum_profile"
        android:title="@string/spectrum_profile_title" >

        <ListPreference
            android:key="spectrum"
            android:title="@string/spectrum_title"
            android:summary="@string/spectrum_summary"
            android:defaultValue="0"
            android:entries="@array/spectrum_profiles"
            android:entryValues="@array/spectrum_values"
            android:dialogTitle="@string/spectrum_dialogTitle" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/vib_title">
        <org.omnirom.device.VibratorStrengthPreference
            android:key="vib_strength"
            android:icon="@drawable/ic_vib_strength"
            android:iconSpaceReserved="true"
            android:title="@string/vib_strength_title"
            android:summary="@string/vib_strength_summary"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/btn_title">
        <org.omnirom.device.BacklightPreference
            android:key="btn_brightness"
            android:iconSpaceReserved="true"
            android:title="@string/btn_led_title"
            android:summary="@string/btn_led_summary"/>
    </PreferenceCategory>
</PreferenceScreen>
